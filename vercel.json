{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/node",
        "config": { "buildCommand": "npm build" }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": { "buildCommand": "npm build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/api/$1" },
      { "src": "/(.*)", "dest": "frontend/$1" }
    ]
  }